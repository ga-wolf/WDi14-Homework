<div class="project_show">
  <h2><%= @project.title %></h2>

  <p><%= @project.description %></p>

  <p>
    Tasks:
    <% @project.tasks.each do |t| %>
      <% if t.complete %>
        <div class="task_container_show_done">
      <% else %>
        <div class="task_container_show">
      <% end %>
        <h3><%= t.title %></h3> <br> <%= t.description %>
        <br>
        <span><%= link_to "Edit", "/tasks/#{t.id}/edit" %>  |  <%= link_to "Delete", "/tasks/#{t.id}", :method => :delete, :data => { :confirm => 'Are you sure you want to delete this task?' } %></span>
      </div>
    <% end %>
      <%= link_to "Add task", "/tasks/new/#{@project.id}" %>
  </p>

  <p>
    Members:
    <br>
      <% @project.users.each do |u| %>
        <%= link_to u.username, user_path(u) %>
        <br>
      <% end %>
  </p>

  <%= link_to "Edit project", edit_project_path %>
  <%= link_to "Delete project", project_path, :method => :delete, :data => { :confirm => "Are you sure you want to delete: #{@project.title}?" } %>
</div>
